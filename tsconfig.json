{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "declaration": true,
      "noUnusedLocals": false,
      "sourceMap": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "lib": [
        "esnext.asynciterable",
        "es6",
        "es7",
        "dom"
      ],
      "pretty": true
    },
    "exclude": [
      "dist",
      "resources"
    ],
    "include": [
      "src/*", "src/lib/createPet.ts"
    ]
  }